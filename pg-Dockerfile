FROM postgres:12

# Variables needed at runtime to configure postgres and run the initdb scripts
ENV POSTGRES_DB ''
ENV POSTGRES_USER ''
ENV POSTGRES_PASSWORD ''

COPY pgjwt--0.1.0.sql /docker-entrypoint-initdb.d/pgjwt--0.1.0.sql
COPY pgjwt.control /pgjwt.control
RUN share=$(pg_config --sharedir) && cp pgjwt.control $share/extension/pgjwt.control
